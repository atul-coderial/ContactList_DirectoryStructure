<!Doctype html>
<html>
    <head>
        <title>
            Welcome to contact_list Home
        </title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="style.css">
    </head>
    <body>
        <div class="jumbotron">
            <div class="conatiner">
                    <h1>Welcome to Contact Dictionary :)</h1>
            </div>
        </div>
        <div class="">
                    <div class="container">
                        <form action="/submitted" method="POST">
                            <fieldset>
                                <legend>contact_list..</legend>
                                <div id="sp_btn">
                                <label for="name">Name:</label>
                                <input type="text" name="name" id="name" placeholder="Enter your name" required>
                                <label for="phone">Phone:</label>
                                <input type="number" name="phone" id="phone" placeholder="Enter your phone no." required>
                                <input type="submit" value="Submit" class="btn btn-primary">
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="container">
                         <table>
                             <tr>
                                 <th>Name:</th>
                                 <th>Phone No.:</th>
                                 <th>Delete Contact</th>
                             </tr>
                             <% for(let i of contact_list){ %>
                             <tr>
                                 <td><%= i.name %></td>
                                 <td><%= i.phone %></td>
                                 <td><button onclick="window.location.href='/delete_contact/?id=<%= i._id %>'" class="btn btn-danger">Delete</button</td>
                             </tr>
                             <% } %>
                         </table>
                    </div>
            </div>
    </body>
</html>